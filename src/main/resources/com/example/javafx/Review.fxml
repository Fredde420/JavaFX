<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.javafx.ReviewController">

    <center>
        <TableView fx:id="reviewTable" prefHeight="300">
            <columns>
                <TableColumn fx:id="columnRating" prefWidth="75" text="Rating" />
                <TableColumn fx:id="columnText" prefWidth="300" text="Review" />
                <TableColumn fx:id="columnDate" prefWidth="100" text="Date" />
            </columns>
        </TableView>
    </center>

    <bottom>

            <Label style="-fx-font-size: 14px;" text="Submit a Review" />

            <GridPane hgap="10" vgap="10">
                <Label text="Rating:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="ratingCombo" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Review:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextArea fx:id="reviewArea" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Button fx:id="submitButton" text="Submit Review" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </GridPane>

    </bottom>
</BorderPane>

