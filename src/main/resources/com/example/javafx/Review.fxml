<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="com.example.javafx.ReviewController">

    <top>
        <Label fx:id="itemTitleLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;">
        </Label>
    </top>
    <center>
        <TableView fx:id="reviewTable" prefHeight="300">
            <columns>
                <TableColumn fx:id="columnRating" prefWidth="75" text="Betyg" />
                <TableColumn fx:id="columnText" prefWidth="300" text="Recension" />
                <TableColumn fx:id="columnDate" prefWidth="100" text="Datum" />
            </columns>
        </TableView>
    </center>
    <bottom>

            <Label style="-fx-font-size: 14px;" text="Skriv en Recension" />

            <GridPane hgap="10" vgap="10">
                <Label text="Betyg:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="ratingCombo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Recension:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextArea fx:id="reviewArea" prefRowCount="3" wrapText="true"
                          GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Button fx:id="submitButton" text="Skicka Recension"
                        GridPane.rowIndex="2" GridPane.columnIndex="1"
                        GridPane.halignment="RIGHT"/>
            </GridPane>
    </bottom>
</BorderPane>
